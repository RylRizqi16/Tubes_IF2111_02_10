# Compiler and flags
CC = gcc
CFLAGS = -Wall -Wextra -Iheader -IADT

# Directories
SRC_DIR = .
COMMAND_DIR = $(SRC_DIR)/command
ADT_DIR = $(SRC_DIR)/ADT

# Source files
SRCS = $(SRC_DIR)/main.c \
       $(COMMAND_DIR)/help.c $(COMMAND_DIR)/login.c $(COMMAND_DIR)/logout.c \
       $(COMMAND_DIR)/quit.c $(COMMAND_DIR)/register.c $(COMMAND_DIR)/store.c \
       $(COMMAND_DIR)/work.c $(COMMAND_DIR)/start.c $(COMMAND_DIR)/workchallenge.c \
       $(ADT_DIR)/ArrayDinBarang/ArrayDinBarang.c $(ADT_DIR)/ArrayStatikUser/ArrayStatikUser.c \
       $(ADT_DIR)/Barang/Barang.c $(ADT_DIR)/Mesin_Karakter/Mesin_Karakter.c \
       $(ADT_DIR)/Mesin_Kata/Mesin_Kata.c $(ADT_DIR)/QueueBarang/QueueBarang.c \
       $(ADT_DIR)/User/User.c

# Object files
OBJS = $(SRCS:.c=.o)

# Output file
TARGET = main.exe

# Default target
all: $(TARGET)

# Link object files
$(TARGET): $(OBJS)
	$(CC) $(OBJS) -o $@

# Compile source files to object files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Clean up
clean:
	rm -f $(OBJS) $(TARGET)

# Phony targets
.PHONY: all clean